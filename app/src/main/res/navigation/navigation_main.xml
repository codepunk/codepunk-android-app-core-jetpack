<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.codepunk.jetpack.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_to_secondary"
            app:destination="@id/second_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.codepunk.jetpack.ui.main.SecondaryFragment"
        android:label="second_fragment"
        tools:layout="@layout/fragment_secondary"/>

</navigation>
